---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<h1 class="text-3xl font-bold mb-4">Reports</h1>
	<div class="mb-4">
		<button
			class="btn btn-primary"
			hx-get="/api/reports/inventory"
			hx-target="#report-content"
			hx-swap="innerHTML"
		>
			Inventory Report
		</button>
		<button
			class="btn btn-secondary ml-2"
			hx-get="/api/reports/issues"
			hx-target="#report-content"
			hx-swap="innerHTML"
		>
			Issue Report
		</button>
	</div>
	<div id="report-content" class="bg-base-100 rounded-box p-4">
		<!-- Report content will be loaded here -->
	</div>
</Layout>
